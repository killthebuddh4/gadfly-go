#
#
# test data
#
#

def numbers
  array 
    2 4 6 7 8 10
  end
end

def numbers_clone
  array.map numbers
    fn |e i| e end
  end
end

def numbers_and_twenty
  array 2 4 6 7 8 10 20 end
end

def numbers_without_ten
  array 2 4 6 7 8 end
end

def numbers_without_two
  array 4 6 7 8 10 end
end

def numbers_with_zero
  array 0 2 4 6 7 8 10 end
end

def numbers_sum 37 end

def squares
  array 4 16 36 49 64 100 end
end

def evens
  array 2 4 6 8 10 end
end

def test_val nil end

#
#
# array.Read
#
#

let test_val
  array.read numbers 2 end
end

if
  test_val != 6
  io.puts "FAIL: array.Read" end
  io.puts "PASS: array.Read" end
end

#
#
# array.Write
#
#

array.write numbers 2 12 end

let test_val array.read numbers 2 end

if
  test_val != 6
  io.puts "FAIL: array.Write immutability" end
  io.puts "PASS: array.Write immutability" end
end

def new_numbers
  array.write numbers 2 12 end
end

let test_val
  array.read new_numbers 2 end
end

if
  test_val != 12
  io.puts "FAIL: array.Write" end
  io.puts "PASS: array.Write" end
end

#
#
# array.For
#
#

let test_val 0 end

array.for numbers
  fn |e i|
    let test_val test_val + e end
  end
end

if
  test_val != numbers_sum
  io.puts "FAIL: array.For" end
  io.puts "PASS: array.For" end
end

#
#
# array.Map
#
#

let test_val
  array.map numbers
    fn |e i|
      e * e
    end
  end
end

def squares_worked
  @equal test_val squares end
end

if squares_worked == false
  io.puts "FAIL: array.Map" end
  io.puts "PASS: array.Map" end
end 

#
#
# array.Filter
#
#

let test_val
  array.filter numbers
    fn |e i|
      def rem
        @math.mod e 2 end
      end

      rem == 0
    end
  end
end

def evens_worked
  @equal test_val evens end
end

if evens_worked == false
  io.puts "FAIL: array.Filter" end
  io.puts "PASS: array.Filter" end
end

#
#
# array.Reduce
#
#

let test_val
  array.reduce
    numbers

    0

    fn |acc e i|
      acc + e
    end
  end
end

if
  test_val != numbers_sum
  io.puts "FAIL: array.Reduce" end
  io.puts "PASS: array.Reduce" end
end

#
#
# array.Push
#
#

array.push numbers 20 end

def push_is_immutable
  @equal numbers_clone numbers end
end

if push_is_immutable == false
  io.puts "FAIL: array.Push immutability" end
  io.puts "PASS: array.Push immutability" end
end

let test_val
  array.push numbers 20 end
end

def push_worked
  @equal test_val numbers_and_twenty end
end

if push_worked == false
  io.puts "FAIL: array.Push" end
  io.puts "PASS: array.Push" end
end

